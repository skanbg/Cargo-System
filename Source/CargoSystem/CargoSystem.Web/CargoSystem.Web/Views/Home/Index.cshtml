@model CargoSystem.Web.ViewModels.Home.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Carrier</th>
                <th>Starting point</th>
                <th>End point</th>
                <th>Start/End date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var route in Model.Routes)
            {
                <tr>
                    <td>@route.Carrier.FirstName @route.Carrier.LastName</td>
                    <td>@route.StartPoint.Country.Name, @route.StartPoint.Town</td>
                    <td>@route.EndPoint.Country.Name, @route.EndPoint.Town</td>
                    <td>@route.TransportStartDate.Value.ToString("dd/MM/yy H:mm") - @route.TransportEndDate.Value.ToString("dd/MM/yy H:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-6">
        @Html.Action("Speditors", "Home")
    </div>
    <div class="col-md-6">
        @Html.Action("Carriers", "Home")
    </div>
</div>

